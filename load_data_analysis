lapply(c(
  "sf","rjson","data.table","tidyverse","lubridate","plotly","rstudioapi","readxl","scales","ggrepel",
  "ggpmisc","hrbrthemes","ggpubr","tidylog","ggperRPkgs"
), function(x){
  if(x%in%installed.packages()){
    return()
  }else{
    install.packages(x)
  }
})
if("LDA"%in%installed.packages()==FALSE){
remotes::install_github('gustavo234guimaraes/LDA',dependencies = F)
}
require(sf)
require(rjson)
require(data.table)
require(tidyverse)
require(lubridate)
require(plotly)
require(rstudioapi)
require(readxl)
require(scales)
require(ggrepel)
require(ggpmisc)
require(hrbrthemes)
require(ggpubr)
require(tidylog)
require(shadowtext)
require(LDA)

