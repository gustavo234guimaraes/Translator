lapply(c(
  "sf","rjson","data.table","tidyverse","lubridate","plotly","rstudioapi","readxl","scales","ggrepel",
  "ggpmisc","hrbrthemes","ggpubr","tidylog","ggperRPkgs"
), function(x){
  if(x%in%installed.packages()){
    return()
  }else{
    install.packages(x)
  }
})
